# PRISMA Backend Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# External API Keys
# ============================================================================

# MetalpriceAPI - https://metalpriceapi.com/
# Free tier: 100 requests/month
# Tracks: Steel, Copper, Aluminum, Zinc, and other metal prices
METALPRICE_API_KEY=your_metalprice_api_key_here

# CommodityAPI - https://commodityapi.com/
# Free tier available
# Tracks: 130+ commodities including metals, energy, agriculture
COMMODITY_API_KEY=your_commodity_api_key_here

# WeatherAPI - https://www.weatherapi.com/
# Free tier: 1M calls/month
# Provides: Weather forecasts, historical data, alerts
WEATHER_API_KEY=your_weather_api_key_here

# World Bank API
# No key needed - public API
# Provides: Economic indicators, infrastructure data

# ============================================================================
# Application Settings
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Server configuration
HOST=0.0.0.0
PORT=8000

# CORS settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Ollama Configuration (for LLM reasoning layer)
# ============================================================================

# Ollama server URL (default: local installation)
OLLAMA_BASE_URL=http://localhost:11434

# Model to use
LLM_MODEL_NAME=llama3

# ============================================================================
# Google Programmable Search Engine
# ============================================================================

# Get your API key: https://developers.google.com/custom-search/v1/overview
# Create search engine: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# ============================================================================
# Database (Optional - for production)
# ============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/prisma_db

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable real API calls (useful for testing)
USE_REAL_APIS=true

# Enable mock data fallback
ENABLE_MOCK_FALLBACK=true

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Rate Limiting (Optional)
# ============================================================================

# Requests per minute per API
RATE_LIMIT_PER_MINUTE=60

